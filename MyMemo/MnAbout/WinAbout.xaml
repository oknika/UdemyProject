<Window x:Class="MyMemo.MnAbout.WinAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About this App" Height="200" Width="330" ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner" SizeToContent="Height" Icon="/Resources/Img/Menus/47997_information_personal_icon.png" ShowInTaskbar="False" Loaded="Window_Loaded">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label x:Name="lblCompany" Content="Company Name" FontWeight="Bold" FontSize="10"/>
            <Line X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="Gray" StrokeThickness="1"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Product Name" Width="80" FontWeight="Bold" FontSize="9"/>
                    <Label x:Name="lblProductName" Content="--------" FontSize="9" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Version" Width="80" FontWeight="Bold" FontSize="9"/>
                    <Label x:Name="lblVersion" Content="--------" FontSize="9" FontWeight="Bold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Authors" Width="80" FontWeight="Bold" FontSize="9"/>
                    <Label x:Name="lblAuthors" Content="--------" FontSize="9" FontWeight="Bold"/>
                </StackPanel>
                <Line X1="0" Y1="0" X2="1" Y2="0" Stretch="Fill" Stroke="Gray" StrokeThickness="1"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="2">
            <Label x:Name="lblDescription" HorizontalAlignment="Center" FontSize="9">
                <TextBlock Text="This application is designed to help you manage your notes and memos efficiently."
                           TextWrapping="Wrap"/>
            </Label>
            
            <Label x:Name="lblCopyright" Content="© 2025 MyMemo Team" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
