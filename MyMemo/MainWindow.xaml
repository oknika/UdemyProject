<Window x:Class="MyMemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="950" WindowStyle="None" WindowState="Normal" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Window.Resources>
        <DropShadowEffect x:Key="shadowEffect"
          BlurRadius="15"
          ShadowDepth="8"
          Color="Black"
          Opacity="0.4"/>
    </Window.Resources>
    <Grid>
        <DockPanel LastChildFill="False">
            <Canvas x:Name="sidePanel" Width="100" DockPanel.Dock="Left">
                <Canvas.Background>
                    <SolidColorBrush Color="#FFEAFFD6" Opacity="0.485"/>
                </Canvas.Background>

                <Border x:Name="clockBorderBack"
                    Width="94"
                    Height="54"
                    Background="Black"
                    CornerRadius="30"
                    Canvas.Left="1"
                    Canvas.Top="8"
                    Padding="10"
                    Effect="{DynamicResource shadowEffect}"/>

                <Border x:Name="clockBorder"
                    Width="90"
                    Height="48"
                    Background="#FF09FF01"
                    CornerRadius="30"
                    Canvas.Left="3"
                    Canvas.Top="11"
                    Padding="10"/>

                <!-- Time Text -->
                <TextBlock x:Name="txtTime"
                   Text="00:00:00"
                   FontSize="18"
                   FontWeight="Bold"
                   FontFamily="Consolas"
                   Foreground="#FF050F46"
                   Canvas.Left="8"
                   Canvas.Top="24"
                   Width="80"
                   TextAlignment="Center"/>

                <Canvas Height="110" Width="88" Canvas.Left="5" Canvas.Top="80" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Effect="{DynamicResource shadowEffect}">
                    <Canvas.Background>
                        <ImageBrush ImageSource="/Resources/Img/CalendarFrame.png"/>
                    </Canvas.Background>
                    <Label x:Name="lblYear" Content="2025" Canvas.Left="2" Canvas.Top="32" HorizontalAlignment="Center" Height="25" VerticalAlignment="Top" Width="40" FontWeight="Bold"/>
                    <Label x:Name="lblMonth" Content="Aug" Canvas.Left="47" Canvas.Top="32" Height="25" VerticalAlignment="Top" Width="33" FontWeight="Bold" Padding="0,5,0,0" HorizontalContentAlignment="Right" HorizontalAlignment="Center"/>
                    <Label x:Name="lblDay" Content="23" Canvas.Left="10" Canvas.Top="58" HorizontalAlignment="Center" VerticalAlignment="Top" Width="68" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="22" Padding="0,0,0,0"/>
                    <Label x:Name="lblDayNm" Content="Sunday" Canvas.Left="10" Canvas.Top="87" HorizontalAlignment="Center" VerticalAlignment="Top" Width="68" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="12" Padding="0,0,0,0"/>
                </Canvas>
            </Canvas>
            <Canvas x:Name="topPanel" Height="50" DockPanel.Dock="Top">
                <Canvas.Background>
                    <SolidColorBrush Color="#FFF1EFB6" Opacity="0.28"/>
                </Canvas.Background>

                <Button Canvas.Top="2" Canvas.Left="5" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnMainMenus_style}">
                    <StackPanel>
                        <Image Source="/Resources/Img/Menus/9004815_add_file_document_page_icon.png" Height="20" Width="27"/>
                        <Label Content="Add memo F2" Style="{StaticResource lblMnBtns_style}"/>
                    </StackPanel>
                </Button>
                <Button Canvas.Top="2" Canvas.Left="85" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnMainMenus_style}">
                    <StackPanel>
                        <Image Source="/Resources/Img/Menus/9004811_search_find_magnifier_zoom_icon.png" Height="20" Width="27"/>
                        <Label Content="Search F3" Style="{StaticResource lblMnBtns_style}"/>
                    </StackPanel>
                </Button>
                <Button Canvas.Top="2" Canvas.Left="165" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnMainMenus_style}">
                    <StackPanel>
                        <Image Source="/Resources/Img/Menus/9004816_gear_settings_options_preferences_icon.png" Height="20" Width="27"/>
                        <Label Content="Settings F4" Style="{StaticResource lblMnBtns_style}"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnTools" Canvas.Top="2" Canvas.Left="245" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnMainMenus_style}"
                        Click="btnTools_Click">
                    <StackPanel>
                        <Image Source="/Resources/Img/Menus/9004847_apps_application_mobile_device_app_icon.png" Height="20" Width="27"/>
                        <Label Content="Tools F5" Style="{StaticResource lblMnBtns_style}"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnAbout" Canvas.Top="2" Canvas.Left="325" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnMainMenus_style}"
                        Click="btnAbout_Click">
                    <StackPanel>
                        <Image Source="/Resources/Img/Menus/9004812_chat_message_bubble_communication_icon.png" Height="20" Width="27"/>
                        <Label Content="About F6" Style="{StaticResource lblMnBtns_style}"/>
                    </StackPanel>
                </Button>
            </Canvas>
            <Canvas x:Name="bottomPanel" Height="30" DockPanel.Dock="Bottom">
                <Canvas.Background>
                    <SolidColorBrush Color="#FFF1EFB6" Opacity="0.5"/>
                </Canvas.Background>
                <Label Content="Background :" Canvas.Left="2" Canvas.Top="2" HorizontalAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="10"/>
                <ComboBox x:Name="cmbBackground" Canvas.Left="73" Canvas.Top="4" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="10" SelectionChanged="cmbBackground_SelectionChanged"/>
                <RadioButton x:Name="rbFill" Content="Fill" FontWeight="Bold" Height="15" Canvas.Left="204" Canvas.Top="6" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rbFill_Checked"/>
                <RadioButton x:Name="rbUniform" Content="Uniform" FontWeight="Bold" Height="15" Canvas.Left="250" Canvas.Top="6" HorizontalAlignment="Left" VerticalAlignment="Center" Checked="rbUniform_Checked"/>
            </Canvas>
            <Canvas Width="800">
                <Canvas x:Name="cnvTool" Height="55" Width="100" HorizontalAlignment="Left" Canvas.Left="245" VerticalAlignment="Top">
                    <Button x:Name="btnUsers" Canvas.Top="2" Canvas.Left="0" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnSubMenus_style}"
                            Click="btnUsers_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Img/Menus/3099376_face_grimacing_icon.png" Height="15" Width="15"/>
                            <Label Content="Users" Style="{StaticResource lblMnBtns_style}" Padding="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnLogout" Canvas.Top="29" Canvas.Left="0" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnSubMenus_style}"
                            Click="btnLogout_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Img/Menus/9026122_user_switch_icon.png" Height="15" Width="15"/>
                            <Label Content="Switch user" Style="{StaticResource lblMnBtns_style}" Padding="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Canvas>
                <Canvas x:Name="cnvAbout" Height="55" Width="100" HorizontalAlignment="Left" Canvas.Left="325" VerticalAlignment="Top">
                    <Button x:Name="btnAboutSub" Canvas.Top="2" Canvas.Left="0" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnSubMenus_style}"
                            Click="btnAboutSub_Click">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Img/Menus/47997_information_personal_icon.png" Height="15" Width="15"/>
                            <Label Content="About Us" Style="{StaticResource lblMnBtns_style}" Padding="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnHelp" Canvas.Top="29" Canvas.Left="0" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnSubMenus_style}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Img/Menus/51567_help_lifesaver_support_icon.png" Height="15" Width="15"/>
                            <Label Content="Help" Style="{StaticResource lblMnBtns_style}" Padding="5,0,0,0"/>
                        </StackPanel>
                    </Button>
                </Canvas>
            </Canvas>
        </DockPanel>

        <Button x:Name="btnMinimize" Height="45" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnMainMenus_style}"
            Click="btnMinimize_Click" HorizontalAlignment="Right" Margin="0,2,90,0" Width="75">
            <StackPanel>
                <Image Source="/Resources/Img/Menus/4960738_full_minimize_mobile_screen_ui_icon.png" Height="20" Width="27"/>
                <Label Content="Minimize" Style="{StaticResource lblMnBtns_style}"/>
            </StackPanel>
        </Button>

        <Button x:Name="btnClose" Height="45" Effect="{DynamicResource shadowEffect}" Style="{StaticResource btnMainMenus_style}"
            Click="btnClose_Click" HorizontalAlignment="Right" Margin="0,2,10,0" Width="75">
            <StackPanel>
                <Image Source="/Resources/Img/Menus/9004828_cross_delete_remove_cancel_icon.png" Height="20" Width="27"/>
                <Label Content="Close" Style="{StaticResource lblMnBtns_style}"/>
            </StackPanel>
        </Button>
    </Grid>
</Window>
