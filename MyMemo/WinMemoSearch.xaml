<Window x:Class="MyMemo.WinMemoSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyMemo"
        mc:Ignorable="d"
        Title="Search memo" Height="550" Width="800" Icon="/Resources/Img/Menus/9004811_search_find_magnifier_zoom_icon.png" ResizeMode="NoResize" Loaded="Window_Loaded">
    <DockPanel>
        <StatusBar x:Name="BtmStatusbar" DockPanel.Dock="Bottom" Height="35">
            <Label Content="Char count: " Margin="10,0,0,0"/>
            <Label x:Name="lblCount" Content="0" Margin="0,0,0,0"/>
        </StatusBar>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.8*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <GroupBox Header="Search" Grid.Column="0" Margin="10,10,0,10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.2*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <ListBox Grid.Row="1" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="5,0,5,5"/>

                    <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="0.5" Margin="5" CornerRadius="3">
                        <StackPanel Margin="5">
                            <CheckBox Content="Find similar title" IsChecked="{x:Null}"/>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Search:" Padding="0" Margin="0,3,0,0"/>
                                <TextBox x:Name="txtSearch" Width="100" Margin="5"/>
                                <Button x:Name="btnSearch" Content="Find" Padding="3,0,3,0"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </GroupBox>

            <GroupBox x:Name="CntGrpBox" Header="Memo detail:" Margin="10,10,10,10" Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.35*"/>
                        <RowDefinition Height="0.1*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Margin="5,5,5,5" BorderBrush="Gray" BorderThickness="0.5" CornerRadius="5">
                        <Grid Margin="15,5,15,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="75"/>
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Label Content="Memo ID" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtMemoID" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,155,0" IsTabStop="False" IsReadOnly="True" Background="#FFE4E4E4"/>
                            <Label Content="Memo title" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center"/>
                            <TextBox x:Name="txtMemoTitle" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <Label Content="Memo Date" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center"/>
                            <DatePicker x:Name="CmbDate" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,155,0"/>
                        </Grid>
                    </Border>

                    <ToolBar Grid.Row="1">
                        <Button x:Name="btnLeft" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8664985_align_left_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnCenter" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8664983_align_center_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnRight" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8665022_align_right_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnJustify" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8664984_align_justify_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Separator/>
                        <Button x:Name="btnIndent" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8665505_indent_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnOutdent" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8665651_outdent_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Separator/>
                        <Button x:Name="btnBold" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8664990_bold_text_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnItalic" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8665477_italic_text_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnUnderline" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/8665831_underline_text_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Separator/>
                        <Button x:Name="btnIncreaseFont" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/typography.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnDecreaseFont" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/typographyMinus.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Separator/>
                        <Button x:Name="btnCut" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/326596_content_cut_scissors_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnCopy" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/326595_content_copy_duplicate_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnPaste" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/326599_clipboard_content_paste_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Separator/>
                        <Button x:Name="btnUndo" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/211838_undo_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Button x:Name="btnRedo" Padding="0,0,0,0"  >
                            <Image Source="/Resources/Img/RtfMenu/211811_redo_icon.png" Style="{StaticResource ImgRTFToolbar}"/>
                        </Button>
                        <Separator/>
                    </ToolBar>

                    <RichTextBox x:Name="RtxBox" Grid.Row="2" Margin="5,5,5,5" AcceptsTab="True">
                        <FlowDocument>
                            <Paragraph>
                                <Run Text="RichTextBox"/>
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                </Grid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
